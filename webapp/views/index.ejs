<!doctype html>
<html lang="en">

<head>
  <title>Tutor System</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />

  <style>
    /* === BACKGROUND STYLES === */
    body {
      background-color: #ffffff; /* Set to white */
      margin: 0;
      padding: 0;
      min-height: 100vh;
    }

    /* overlay rule (body::before) removed */

    /* === NAVBAR === */
    .navbar {
      background-color: #002D72;
    }

    .logo-img {
      height: 40px;
      width: auto;
      object-fit: contain;
    }

    .nav-link {
      color: white !important;
    }

    .nav-link:hover {
      background-color: #002D72;
    }

    /* make text readable on white background */
    main {
      color: #000; /* Changed text to black */
    }
    .logo-img { height: 40px; filter: none; } /* ensure logo not inverted */
    .nav-link { cursor: pointer; }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg border-bottom shadow-sm" style="background-color: #002D72;">
    <div class="container">
      <!-- Logo (Left) -->
      <a class="navbar-brand d-flex align-items-center text-white order-1" href="/">
        <img src="/images.png" alt="Logo" class="me-2 logo-img" style="height: 40px; filter: none;" />
        <span class="fw-semibold text-white">Tutor System</span>
      </a>
  
      <!-- Toggler (Mobile) -->
      <button class="navbar-toggler text-white border-0 order-2" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
      </button>
  
      <!-- Collapsible Content -->
      <div class="collapse navbar-collapse order-3" id="navbarSupportedContent">
        <!-- Center Navigation Links -->
        <ul class="navbar-nav mx-auto text-center">
          <li class="nav-item"><a href="/info" class="nav-link text-white px-3 fw-semibold">Home</a></li>
          <li class="nav-item"><a href="/find" class="nav-link text-white px-3 fw-semibold">Find</a></li>
          <li class="nav-item"><a href="/timeline" class="nav-link text-white px-3 fw-semibold">Timeline</a></li>
          <li class="nav-item"><a href="/session" class="nav-link text-white px-3 fw-semibold">My session</a></li>
        </ul>
  
        <!-- Right Controls (Edit + Logout) -->
        <div class="d-flex align-items-center ms-lg-3 mt-3 mt-lg-0">
          <div class="form-check form-switch me-3">
            <input class="form-check-input" type="checkbox" id="editModeToggle">
            <label class="form-check-label fw-semibold text-white" for="editModeToggle">Edit mode</label>
          </div>
          <a href="/auth/logout" class="btn btn-outline-light btn-sm fw-semibold">Logout</a>
        </div>
      </div>
    </div>
  </nav>
  

  <main class="container py-5">
    <h1 class="display-5 fw-semibold">Welcome to Tutor System</h1>
    <p class="lead">Find tutors, manage your learning, and stay organized.</p>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</body>

</html>